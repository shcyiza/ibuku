<%= simple_form_for @source, :html => { :multipart => true } do |f| %>
	<%= f.label "What is your source?" %>
	<br>
	<%= select_tag(:source_type, options_for_select(["article","book","audio file","video file"]), prompt: @source.source_type) %>
	<br><br>
	<%= f.label "Cover" %>
	<%= f.file_field :source_img %>
	<%= f.input :title, label: "Source Title" %>
	<%= f.input :description, label: "Abstract" %>
	<%= f.input :author %>
	<%= f.input :editors, label: "Editor(s)"  %>
	<%= f.input :published_on, as: :string %>
	<%= f.button :submit, :class => 'btn-custom2' %>
<% end %>
