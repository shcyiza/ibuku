<h1 class="current-category"><%= params[:category] %></h1>
<div class="row">
	<div class="col-md-3">
		<%= link_to new_origin_path, class: "btn-custom2" do %>
			<i class="fi-plus"></i> Add origin
		<% end %>
	</div>
	<div class="col-md-3">
		<br>
		<%= form_tag notes_path, :method => :get do %>
				<%= text_field_tag :search, params[:search] %>
				<%= button_tag(type: "submit", :name => nil, class: "btn btn-default") do %>
					<i class='fi-magnifying-glass'></i>
				<% end %>
		<% end %>
	</div>
</div>
<br><br>
<% if @origins.count == 0 %>

	<h1>There are no origins currently in this category</h1>

<% else %>
	<div class="row">

		<% @origins.each do |src| %>

			<div class="col-md-3">
				<%= link_to src do %>
					<%= image_tag src.origin_img.url(:origin_index), class: "origin" %>
					<%= src.title %>
				<%end%>
			</div>

		<% end %>

	</div>

<% end %>
